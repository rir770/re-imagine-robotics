#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/sreysus/workflow/pts/re-imagine-robotics" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/sreysus/workflow/pts/re-imagine-robotics")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/sreysus/workflow/pts/re-imagine-robotics" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/sreysus/workflow/pts/re-imagine-robotics/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/sreysus/workflow/pts/re-imagine-robotics/.envrc" "/Users/sreysus/workflow/pts/re-imagine-robotics/.direnv"/*.rc
